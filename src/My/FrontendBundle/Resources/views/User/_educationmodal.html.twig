<div class="modal fade" id="myModalEducation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">Add more education</h4>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label for="ename">School:</label>
                    <input type="text" class="form-control" id="ename" name="ename" placeholder="Enter school name">
                </div>
                <div class="form-group">
                    <label for="emajor">Major:</label>
                    <input type="text" class="form-control" id="emajor" name="emajor" placeholder="Enter Major">
                </div>
                <div class="form-group">
                    <label for="estart_time">Start time:</label>
                    <select name="estart_time" id="estart_time">
                        <option value=""></option>
                        {% for i in 2015..1960 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                    <label for="eend_time">End time:</label>
                    <select name="eend_time" id="eend_time">
                        <option value=""></option>
                        {% for i in 2015..1960 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="corder">Sort:</label>
                    <input type="text" class="form-control" id="corder" name="corder" placeholder="number for sort">
                </div>
                <input type="hidden" id="eid" name="eid" value="">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="btnSaveEducation" class="btn btn-primary" data-loading-text="Loading...">Save changes</button>
                <button type="button" id="btnRemoveEducation" class="btn btn-primary" style="display: none;"  data-loading-text="Loading...">Remove</button>
            </div>
        </div>
    </div>
</div>
